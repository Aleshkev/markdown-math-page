---
import Common from "./Common.astro";
import Prose from "../components/Prose.astro";
import Footer from "../components/Footer.astro";

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<Common>
  <main class="bg-white rounded-lg p-4 md:p-10 border-[1px] border-slate-300 print:border-none">
    <article class="columns-sm">
      <Prose>
        <slot />
      </Prose>
    </article>
  </main>
</Common>

<style is:global>
  @page {
    size: a4 landscape;
    margin: 0;
    padding: 0;
  }
</style>
